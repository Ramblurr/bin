#!/bin/bash
#################################################################################
# launcher - launch script using dmenu sorted by use frequency
#
# based on code from https://bbs.archlinux.org/viewtopic.php?pid=619209#p619209
# author: mutantmonkey <mutantmonkey@gmail.com>
#################################################################################

if [ -f $HOME/.dmenurc ]; then
  . $HOME/.dmenurc
else
  DMENU='dmenu -i'
fi

#TERMI='urxvt -e bash -lic'
TERMI='roxterm -e'
CACHE="$HOME/.dmenu_cache_recent"

touch $CACHE
MOST_USED=$(LC_ALL="C"; sort $CACHE | uniq -c | sort -nr | colrm 1 8)
RUN=$( ( echo "$MOST_USED"; dmenu_path | grep -vxF "$MOST_USED" ) | eval $DMENU) &&
	(echo $RUN; head -n99 $CACHE) > $CACHE.$$ && 
	mv $CACHE.$$ $CACHE

case $RUN in
    *\;) $TERMI ${RUN/;/} & ;;
    *)   $RUN &             ;;
esac

exit 0
